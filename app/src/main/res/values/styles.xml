<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextAppearance">@style/ToolbarTextStyle</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubsequentToolbarsStyle" parent="Base.Toolbar">
        <item name="titleTextColor">@color/black_total</item>
    </style>

    <style name="EditTextSearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:maxLength">30</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="IconEditTextSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/gray</item>
    </style>
    
    <style name="SwitchThemeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_61</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:textColor">@color/black_total</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/track_off</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="SettingsListTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_61</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">@dimen/padding_12</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="drawableTint">@color/gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ButtonNavigationStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="cornerRadius">@dimen/radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_8</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="TracksTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_11</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>
    <style name="TrackTitleStyle" parent="TracksTextStyle">
        <item name="android:textColor">@color/black_total</item>
    </style>
    <style name="ErrorPlaceholderTextStyle">
        <item name="android:layout_width">@dimen/width_312</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
    </style>
    <style name="ErrorPlaceholderButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="HistoryListTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="AudioPlayerDescriptionTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>
    <style name="AudioPlayerDescriptionStyle" parent="AudioPlayerDescriptionTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintWidth_max">235dp</item>
    </style>
    <style name="AudioPlayerTrackTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
    </style>
    <style name="ProgressBarStyle">
        <item name="android:layout_width">@dimen/dimen_44</item>
        <item name="android:layout_height">@dimen/dimen_44</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>
    <style name="TabTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorHeight">@dimen/tabIndicatorHeight</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabBackground">@color/white</item>
    </style>
    <style name="BottomNavLabelStyle">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="CreatePlaylistInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="boxStrokeColor">@color/create_playlist_input_frame</item>
        <item name="boxStrokeWidth">@dimen/boxStrokeWidth</item>
        <item name="boxStrokeWidthFocused">@dimen/boxStrokeWidth</item>
        <item name="hintTextColor">@color/blue</item>
    </style>
    <style name="CreatePlaylistTextInputHint">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ImageViewCoverStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/cover_margin_top</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>
    <style name="PlaylistTextStyle" parent="TracksTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>
    <style name="PlaylistTitleStyle" parent="TrackTitleStyle">
        <item name="android:textSize">@dimen/text_16</item>
    </style>
    <style name="BottomSheetTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_30</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="PlaylistDetailsTitleStyle" parent="TracksTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="PlaylistDetailsTextStyle." parent="TracksTextStyle">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/text_18</item>
    </style>
</resources>