<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mediaLibrary.ui.PlaylistsFragment">

    <Button
        android:id="@+id/newPlaylistButton"
        style="@style/ErrorPlaceholderButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_24"
        android:text="@string/new_playlist" />

    <LinearLayout
        android:id="@+id/playlistsPlaceholderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/playlistsPlaceholderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/placeholder_not_found" />

        <TextView
            android:id="@+id/playlistsPlaceholderMessage"
            style="@style/ErrorPlaceholderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/empty_playlists" />
    </LinearLayout>
</LinearLayout>